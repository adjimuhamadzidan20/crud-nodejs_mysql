<!DOCTYPE htmp
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>UNINDRA ACADEMY</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
	<nav class="navbar navbar-expand-lg bg-primary navbar-dark">
	  <div class="container">
	    <a class="navbar-brand text-light" href="matkul">UNINDRA</a>
	    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
	      <span class="navbar-toggler-icon"></span>
	    </button>
	    <div class="collapse navbar-collapse" id="navbarNav">
	      <ul class="navbar-nav">
	        <li class="nav-item">
	          <a class="nav-link text-light" href="/">Beranda</a>
	        </li>
	        <li class="nav-item">
	          <a class="nav-link text-light" href="/mahasiswa">Data Mahasiswa</a>
	        </li>
	        <li class="nav-item">
	          <a class="nav-link text-light" href="/dosen">Data Dosen</a>
	        </li>
	        <li class="nav-item">
	          <a class="nav-link active text-light text-decoration-underline" href="/matkul" aria-current="page">Data Matkul</a>
	        </li>
	      </ul>
	    </div>
	  </div>
	</nav>

	<div class="container p-3">
		<div class="header mb-3 d-flex justify-content-between">
			<h5>Data Matakuliah</h5>
			<button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal">Tambah</button>
		</div>
		<div class="kolom-cari mb-2">
			<form action="/matkul/search-matkul" method="post" class="d-flex justify-content-between">
				<div class="keyword w-100">
					<input type="search" class="form-control form-control-sm" placeholder="Cari Matakuliah" name="cari">
				</div>
				<div class="button-cari" style="margin-left: 10px;">
					<button type="submit" class="btn btn-primary btn-sm">Cari</button>
				</div>
			</form>
		</div>
		<div class="table-responsive">
			<table class="table table-striped">
			  <thead>
			    <tr>
			      <th scope="col" nowrap="nowrap">ID Matkul</th>
			      <th scope="col" nowrap="nowrap">Matakuliah</th>
			      <th scope="col" nowrap="nowrap">Prodi</th>
			      <th scope="col" nowrap="nowrap">SKS</th>
			      <th scope="col" nowrap="nowrap">Semester</th>
			      <th scope="col" nowrap="nowrap">Dosen Pengajar</th>
			      <th scope="col" nowrap="nowrap">Aksi</th>
			    </tr>
			  </thead>
			  <tbody>
			  	<% for (hasil of data) { %>
				    <tr>
				      <th scope="row" nowrap="nowrap"><%= hasil.id %></th>
				      <td nowrap="nowrap"><%= hasil.matakuliah %></td>
				      <td nowrap="nowrap"><%= hasil.prodi %></td>
				      <td nowrap="nowrap"><%= hasil.sks %></td>
				      <td nowrap="nowrap"><%= hasil.semester %></td>
				      <td nowrap="nowrap"><%= hasil.dosen_pengajar %></td>
				      <td nowrap="nowrap">
				      	<a href="/matkul/update/<%= hasil.id %>" type="button" class="btn btn-primary btn-sm">
				      		Edit
				      	</a>
				      	<a onclick="konfirmasi('/matkul/delete/<%= hasil.id %>')" type="button" class="btn btn-primary btn-sm">
				      		Delete
				      	</a>
				      </td>
				    </tr>
				  <% } %>
			  </tbody>
			</table>
		</div>
	</div>

	<!-- Modal -->
	<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h1 class="modal-title fs-5" id="exampleModalLabel">Tambah Data Matkul</h1>
	        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
	      </div>
	      <form action="/add-matkul" method="post">
		      <div class="modal-body">
		      	<div class="mb-3">
						  <label for="exampleFormControlInput1" class="form-label">Matakuliah</label>
						  <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Masukan Nama Matakuliah" name="matkul" required="required">
						</div>
	      		<div class="mb-3">
						  <label for="exampleFormControlmatkul" class="form-label">Prodi</label>
						  <select class="form-select" aria-label="Default select example" id="exampleFormControlmatkul" name="prodi">
							  <option selected disabled="disabled">-- Prodi Atau Jurusan --</option>
							  <option value="Pend. B.indonesia">Pend. B.indonesia</option>
							  <option value="Pend. B.inggris">Pend. B.inggris</option>
							  <option value="Pend. Matematika">Pend. Matematika</option>
							  <option value="Ekonomi">Ekonomi</option>
							  <option value="Biologi">Biologi</option>
							  <option value="Arsitektur">Arsitektur</option>
							  <option value="T.Industri">T.Industri</option>
							  <option value="Informatika">Informatika</option>
							  <option value="DKV">DKV</option>
							  <option value="Bimbingan Konseling">Bimbingan Konseling</option>
							</select>	
						</div>
						<div class="mb-3">
						  <label for="exampleFormControlInput1" class="form-label">SKS</label>
						  <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Jumlah SKS" name="sks" required="required">
						</div>
						<div class="mb-3">
						  <label for="exampleFormControlInput1" class="form-label">Semester</label>
						  <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Semester" name="semester" required="required">
						</div>
						<div class="mb-3">
						  <label for="exampleFormControlInput1" class="form-label">Dosen Pengajar</label>
						  <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Nama Dosen" name="dosen" required="required">
						</div>
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
		        <button type="submit" class="btn btn-primary" onclick="simpan()">Save</button>
		      </div>
	      </form>
	    </div>
	  </div>
	</div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

	<script type="text/javascript">
		// popup konfir delete data
		function konfirmasi(link) {
			Swal.fire({
			  title: 'Anda yakin ingin menghapusnya?',
			  // showDenyButton: true,
			  showCancelButton: true,
			  confirmButtonText: 'Hapus',
			  icon: 'question',
			  confirmButtonColor: '#0D6EFD'
			  // denyButtonText: `Don't save`,
			}).then((result) => {
			  /* Read more about isConfirmed, isDenied below */
			  if (result.isConfirmed) {
			    Swal.fire({
			    	title: 'Hapus Berhasil!', 
			    	text: 'Data matakuliah berhasil terhapus',
			    	icon: 'success',
			    	showConfirmButton: false
			    })   
			    setTimeout(function() {
			    	return document.location.href = link
			    }, 1500)
			  } else if (result.isDenied) {
			    Swal.fire('Hapus Data Gagal!', '', 'error')
			  }
			})
		}

		// popup simpan data
		function simpan() {
			Swal.fire({
				title: 'Simpan Berhasil!',
				text: 'Data matakuliah berhasil tersimpan',
				icon: 'success',
				timer: 2000,
				showConfirmButton: false
			})
		}
	</script>
</body>
</html>